@{
    ViewData["Title"] = ViewBag.Title;
}
<div class="d-none" id="interactivePage"></div>

<img id="mainLoader" src="/icons/loadingBlack.gif" class="position-absolute w-100 h-100 top-0 start-0 m-fadeOut" alt="Loader">
<div id="mainArea" class="d-flex-column-grow-1">
    <h1 id="mainTitle" class="text-center mb-4">İnteraktif @ViewBag.Title</h1>
    <div id="mainBlock" class="d-flex-column-grow-1"></div>
</div>

<!-- MODALS -->
<div id="Info" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">İnteraktif İncele</h4>
                <button type="button" class="btn-close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div id="modal-body" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>