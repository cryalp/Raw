<!DOCTYPE html>
<html lang="en" class="h-100">

@{
    await Html.RenderPartialAsync("_headLayout");
}

<body class="d-flex-column-grow-1 h-100">
    @{
        await Html.RenderPartialAsync("_headerLayout");
    }
    <main id="mainBlock" class="pb-5 container-fluid d-flex-column-grow-1">
        @RenderBody()
    </main>

    @{
        await Html.RenderPartialAsync("_footerLayout");
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/AutoPage.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
